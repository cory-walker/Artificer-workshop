<Display>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Button:
                text: 'Craft Item'
                on_release: sm.current = 'crafting'  #<<<<<<<<<<<<<<<<
            Button:
                text: 'Load Item'
                on_release: sm.current = 'load_item'  #<<<<<<<<<<<<<<<<

        ScreenManager:
            id: sm
            SplashScreen:
            CraftingScreen:
            LoadItemScreen:

<SplashScreen>:
    name: 'splash'
    Label:
        text: "Splashy splash splash"
<EldrictPropertiesDropDown>:
    name: 'eldrict properties'
    Button:
        id: eldrict_prop_btn
        text: 'property'
        on_release:
            if not root.state: eldrict_properties_dd.open(self); root.state = True
            else: eldrict_properties_dd.dismiss();root.state = False
    DropDown:
        id: eldrict_properties_dd
        on_select: eldrict_prop_btn.text = '{}'.format(args[1]); root.state=False
        size_hint: None, None
        width: root.width
        buttonHeight: 24

<RarityDropDown>:
    name: 'rarity dropdown'
    Button:
        id: rarity_button
        text: 'Rarity: ?'
        on_release: 
            if not root.state: rarity_dropdown.open(self); root.state = True
            else: rarity_dropdown.dismiss(); root.state = False
    DropDown:
        id: rarity_dropdown    
        on_select: rarity_button.text = 'Rarity: {}'.format(args[1]); root.state=False
        size_hint: None, None
        width: root.width
        buttonHeight: 24
        Button:
            text: 'common'
            on_release: rarity_dropdown.select(self.text)
            size_hint_y: None
            height: rarity_dropdown.buttonHeight
        Button:
            text: 'uncommon'
            on_release: rarity_dropdown.select(self.text)
            size_hint_y: None
            height: rarity_dropdown.buttonHeight
        Button:
            text: 'rare' 
            on_release: rarity_dropdown.select(self.text)
            size_hint_y: None
            height: rarity_dropdown.buttonHeight
        Button:
            text: 'very rare'
            on_release: rarity_dropdown.select(self.text)
            size_hint_y: None
            height: rarity_dropdown.buttonHeight
        Button:
            text: 'legendary'
            on_release: rarity_dropdown.select(self.text)
            size_hint_y: None
            height: rarity_dropdown.buttonHeight
<CraftingScreen>:
    name: 'crafting'      #<<<<<<<<<<<<<<<<
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: 'Item Name'
                text: 'Enter Item Name Here'

            RarityDropDown:
                
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'consumable'
                    halign: 'right'
                CheckBox:
                    id: consumable_checkbox
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'artifact'
                    halign: 'right'
                CheckBox:
                    id: artifact_checkbox
        BoxLayout:
            orientation: 'vertical'
            id: props_box
<LoadItemScreen>:
    name: 'load_item'      #<<<<<<<<<<<<<<<<

<RarityButton>:
    text: 'mundane'
    on_release: rarity_dropdown.select(self.text)
    size_hint_y: None
    height: 24